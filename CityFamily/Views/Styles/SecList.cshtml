@model IEnumerable<CityFamily.Models.StyleDetails>

@{
    Layout = "~/Views/Shared/HeadFoot.cshtml";
    ViewBag.Title = "城市人家";
}

@section Content{
    <div class='menu'>
        <a href='/Buildings/List' class='menuItem '>找我家</a>
        <div class='menuDivideLine'></div>
        <a href="/FurnitureView/CoverList" class='menuItem '>家具场景</a>
        <div class='menuDivideLine'></div>
        <a class='menuItem choosed' href='/Styles/List'>风格定位</a>
        <div class='menuDivideLine'></div>
        <a href='/Function/Questionnaire' class='menuItem'>功能定位</a>
        <div class='menuDivideLine'></div>
        <a href='/VIP/FuncList' class='menuItem'>VIP档案库</a>
    </div>
    <div id='contentContainer'>
        <div class='partContainer'>
            <div id='part2_contentContainer2'>
                <div class="pathTip">
                    <a href='/Styles/List' class="pathTipItem">城市人家八大设计风格体系</a>
                    <div class="pathTipItem">@ViewBag.styleName</div>
                </div>
                <div id='part2_contentContainer2_content1' class='pics_content1'>
                    @foreach (var style in Model)
                    {
                        <span>
                            <a href='/Styles/ThirdList/@style.Id' class='specific_styleContainer' style='background-image:url(@style.StyleDetailIndex)'>
                                <div class='specific_styleContainerBottom'>
                                    <div class='specific_styleBottomMore'></div>
                                    <div class='specific_styleName'>@style.StyleDetailName</div>
                                </div>
                                <div class='specific_styleHoverContainer'>
                                    <div class='specific_styleView'></div>
                                    <div class='specific_styleViewName'>查看详情</div>
                                </div>
                            </a>
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
}
